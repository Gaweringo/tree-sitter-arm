{
  "name": "asm",
  "rules": {
    "source_file": {
      "type": "CHOICE",
      "members": [
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "function_definition"
          }
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "directive"
          }
        }
      ]
    },
    "function_definition": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "function_label"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "_statement"
          }
        }
      ]
    },
    "_statement": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "return_statement"
        },
        {
          "type": "SYMBOL",
          "name": "math_statement"
        },
        {
          "type": "SYMBOL",
          "name": "mov_statement"
        }
      ]
    },
    "math_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "math_operation"
        },
        {
          "type": "SYMBOL",
          "name": "register"
        },
        {
          "type": "STRING",
          "value": ","
        },
        {
          "type": "SYMBOL",
          "name": "register"
        },
        {
          "type": "STRING",
          "value": ","
        },
        {
          "type": "SYMBOL",
          "name": "register"
        }
      ]
    },
    "mov_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "mov"
        },
        {
          "type": "SYMBOL",
          "name": "register"
        },
        {
          "type": "STRING",
          "value": ","
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "register"
            },
            {
              "type": "SYMBOL",
              "name": "constant"
            }
          ]
        }
      ]
    },
    "math_operation": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "sub"
        },
        {
          "type": "STRING",
          "value": "add"
        },
        {
          "type": "STRING",
          "value": "muls"
        }
      ]
    },
    "function_label": {
      "type": "PATTERN",
      "value": "[a-z]+[:]"
    },
    "return_statement": {
      "type": "PATTERN",
      "value": "(bx)\\s+[a-z]+"
    },
    "register": {
      "type": "PATTERN",
      "value": "[r]\\d+"
    },
    "directive": {
      "type": "PATTERN",
      "value": "[.][a-z]+"
    },
    "constant": {
      "type": "PATTERN",
      "value": "\\d+"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}

