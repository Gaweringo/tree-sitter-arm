{
  "name": "asm",
  "rules": {
    "source_file": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_statement"
        },
        {
          "type": "BLANK"
        }
      ]
    },
    "_statement": {
      "type": "REPEAT1",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "function_definition"
          },
          {
            "type": "SYMBOL",
            "name": "directive"
          },
          {
            "type": "SYMBOL",
            "name": "comment"
          }
        ]
      }
    },
    "function_definition": {
      "type": "SEQ",
      "members": [
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "label"
          },
          "named": true,
          "value": "func_name"
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "math_statement"
              },
              {
                "type": "SYMBOL",
                "name": "simple_statement"
              },
              {
                "type": "SYMBOL",
                "name": "branch_statement"
              },
              {
                "type": "SYMBOL",
                "name": "load_statement"
              },
              {
                "type": "SYMBOL",
                "name": "push_statement"
              },
              {
                "type": "SYMBOL",
                "name": "pool_statement"
              },
              {
                "type": "SYMBOL",
                "name": "label"
              }
            ]
          }
        },
        {
          "type": "SYMBOL",
          "name": "return_statement"
        }
      ]
    },
    "math_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "opcode"
        },
        {
          "type": "SYMBOL",
          "name": "register"
        },
        {
          "type": "STRING",
          "value": ","
        },
        {
          "type": "SYMBOL",
          "name": "register"
        },
        {
          "type": "STRING",
          "value": ","
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "register"
            },
            {
              "type": "SYMBOL",
              "name": "constant"
            }
          ]
        }
      ]
    },
    "load_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "PATTERN",
              "value": "ld([a-z]+)?"
            },
            {
              "type": "PATTERN",
              "value": "st([a-z]+)?"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "register"
        },
        {
          "type": "PATTERN",
          "value": "(.*)"
        }
      ]
    },
    "pool_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "label"
        },
        {
          "type": "SYMBOL",
          "name": "directive"
        }
      ]
    },
    "push_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "PATTERN",
              "value": "push+"
            },
            {
              "type": "PATTERN",
              "value": "pop+"
            }
          ]
        },
        {
          "type": "PATTERN",
          "value": "(.*)"
        }
      ]
    },
    "simple_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "opcode"
        },
        {
          "type": "SYMBOL",
          "name": "register"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": ","
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "CHOICE",
              "members": [
                {
                  "type": "SYMBOL",
                  "name": "register"
                },
                {
                  "type": "SYMBOL",
                  "name": "constant"
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "opcode": {
      "type": "CHOICE",
      "members": [
        {
          "type": "PATTERN",
          "value": "sub(s)?"
        },
        {
          "type": "PATTERN",
          "value": "add(s)?"
        },
        {
          "type": "PATTERN",
          "value": "mul(s)?"
        },
        {
          "type": "PATTERN",
          "value": "mov(s)?"
        },
        {
          "type": "PATTERN",
          "value": "asr(s)?"
        },
        {
          "type": "PATTERN",
          "value": "and(s)?"
        },
        {
          "type": "PATTERN",
          "value": "bic(s)?"
        },
        {
          "type": "PATTERN",
          "value": "cmp+"
        },
        {
          "type": "PATTERN",
          "value": "lsl(s)?"
        },
        {
          "type": "PATTERN",
          "value": "lsr(s)?"
        }
      ]
    },
    "return_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "(bx)\\s+"
        },
        {
          "type": "SYMBOL",
          "name": "register"
        }
      ]
    },
    "branch_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "PATTERN",
              "value": "(bl)\\s+"
            },
            {
              "type": "PATTERN",
              "value": "(beq)\\s+"
            },
            {
              "type": "PATTERN",
              "value": "(bne)\\s+"
            },
            {
              "type": "PATTERN",
              "value": "(bcs)\\s+"
            },
            {
              "type": "PATTERN",
              "value": "(bl([a-z]+)?)\\s+"
            },
            {
              "type": "PATTERN",
              "value": "(bg([a-z]+)?)\\s+"
            }
          ]
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          },
          "named": true,
          "value": "label"
        }
      ]
    },
    "label": {
      "type": "PATTERN",
      "value": "(.*?):"
    },
    "register": {
      "type": "CHOICE",
      "members": [
        {
          "type": "PATTERN",
          "value": "[r]\\d+"
        },
        {
          "type": "PATTERN",
          "value": "sp"
        },
        {
          "type": "PATTERN",
          "value": "lr"
        },
        {
          "type": "PATTERN",
          "value": "pc"
        }
      ]
    },
    "directive": {
      "type": "PATTERN",
      "value": "[.][0-9a-zA-Z]+.*"
    },
    "comment": {
      "type": "CHOICE",
      "members": [
        {
          "type": "PATTERN",
          "value": "@.*"
        },
        {
          "type": "PATTERN",
          "value": "#.*"
        }
      ]
    },
    "constant": {
      "type": "CHOICE",
      "members": [
        {
          "type": "PATTERN",
          "value": "\\d+"
        },
        {
          "type": "PATTERN",
          "value": "0[xX][0-9a-fA-F]+"
        }
      ]
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[A-z]+.*"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}

